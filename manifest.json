{
  "manifest_version": 2,
  "name": "Tab Limiter",
  "version": "1.0",
  "description": "Limits the number of tabs that can be open in a session",
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab"
  ],
  "browser_action": {
    "browser_style": true,
    "default_title": "Tab Limiter",
    "default_popup": "popup.html"
  }
}