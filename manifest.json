{
  "manifest_version": 2,
  "name": "Tab Limiter",
  "version": "1.0",
  "description": "Limits the number of tabs that can be open in a session",
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab",
    "storage",
    "notifications"
  ],
    "background": {
    "scripts": ["./dist/background.js"]
  },
  "options_ui": {
    "page": "./src/options/options.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./dist/popup.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "./src/popup/popup.html"
  ]
}